<UserControl x:Class="Cntgraph.UCcountgraph"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cntgraph"
             mc:Ignorable="d"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             d:DesignHeight="200" d:DesignWidth="400">
    <d:UserControl.DataContext>
        <local:CountgraphMV/>
    </d:UserControl.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="317*"/>
            <ColumnDefinition Width="83*"/>
        </Grid.ColumnDefinitions>
        <Label Content="그래프 수" FontSize="25" Margin="5,1,1,1"/>
        <ComboBox ItemsSource="{Binding Combolist}" Width="120" Height="40" HorizontalContentAlignment="Center" SelectedIndex="0" FontSize="20"  VerticalContentAlignment="Center" Margin="10,52,0,108" HorizontalAlignment="Left" >
            <b:Interaction.Triggers>
                <b:EventTrigger EventName="SelectionChanged">
                    <b:InvokeCommandAction Command="{Binding selchange}" PassEventArgsToCommand ="True"/>
                </b:EventTrigger>
            </b:Interaction.Triggers>

        </ComboBox>
    </Grid>
</UserControl>
